<div class="container">
  <header><img src="" class="img-responsive main-image"></header>
  <div class="col-md-8 col-md-offset-2">
    <h2><%= @medicine.name %></h2>

    <div class="content">
      <p>
        <ul>
          <li><%= @medicine.strength %></li>
          <li><%= @medicine.doctor %></li>
          <li><%= @medicine.dose_number %></li>
          <li><%= @medicine.dose_instructions %></li>
          <li><%= @medicine.how_to_refill %></li>
          <li><%= @medicine.rx_number %></li>
          <li><%= @medicine.number_in_bottle %></li>
          <li><%= @medicine.refill_date %></li>
        </ul>
      </p>

      <form method="get" action="/medicines/<%= @medicine.id %>/edit">
        <input type="submit" value="Edit this medicine"/>
      </form>
      <form method="post" action="/medicines/<%= @medicine.id %>/delete">
        <input type="submit" value="Delete this medicine"/>
      </form>
      <form method="get" action="/logout">
        <input type="submit" value="Logout"/>
      </form>
      <br></br>
    </div>

    <div class="sidebar">
      <h3></h3>
      <ul>
        <li>
        </li>
      </ul>
    </div>

  </div>
</div>
